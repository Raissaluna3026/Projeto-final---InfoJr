// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  quantity Int 
  name String
  totalPrice Float
  discountPrice Float
  images String[]
  gender GENDER
  productType PRODUCTTYPE
  tags TAG[]

  collection Collection @relation(fields: [collectionId], references: [id])
  collectionId String
 @@map("products") 
}

enum GENDER {
  MASCULINO
  FEMININO
}

enum PRODUCTTYPE {
  CALCA
  CAMISA
  CASACOS
  ACESSORIOS
  MASCULINO
  FEMININO
}

enum TAG {
  CALCA
  CAMISA
  CASACOS
  ACESSORIOS
  MASCULINO
  FEMININO
}

model Collection {
  id String @id @default(uuid())
  name String @unique
  products Product[]
  @@map("collections")
}
